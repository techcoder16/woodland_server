generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


enum Role {
  Admin 
  User
  Reseller


}

model User {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  usertype          String?
  type              String?
  email             String?  @unique
  
  Title             String?  // Remove the @unique if you want to allow duplicates
  first_name        String?
  last_name         String?
  password          String?
  salutation        String?
  post_code         String?
  Address           String?
  Town              String?

  Country           String?
  phone_number      Float?   // This can be changed to String if you want to support formats with symbols
  fax               Float?
  date_of_birth     DateTime?
  website           String?
  pager             String?
  birth_place       String?
  nationality       String?
  passport          String?
  accpet_LHA_DWP    String?
  internal_info     String?

  phone_home        Float?   // New attribute for home phone
  phone_work        Float?   // New attribute for work phone
  phone_mobile      Float?   // New attribute for mobile phone
  do_not_receive_feedback    Boolean? // New attribute for feedback notifications
  label_status              String?   // New attribute for label status
  branch                    String?   // New attribute for branch
  woodland                  String?   // New attribute for woodland
  negotiator                String?   // New attribute for negotiator
  lead_source               String?   // New attribute for lead source

  landlord_repairs          Boolean?  // New attribute for landlord repairs
  looking_to_buy            String?  // New attribute for buying interest
sales_fees Float? // New attribute for
finders_fees Float? // New attribute for
management_fees Float? // New attribute
NRL_tax Float? // New attribute for

VAT_number Float
  consented_marketing_category String? // New attribute for marketing consent category


  // Bank data attributes
  bank_body                 String?  // Bank body
  account_no                String?  // Account number
  sort_code                 String?  // Sort code
  account_name              String?  // Account name
  beneficiary_reference      String?  // Beneficiary reference
  address_line_1           String?  // Address line 1
  address_line_2           String?  // Address line 2
  bank_town                String?  // Town
  county                    String?  // County
  postcode                  String?  // Postcode
  bank_country              String?  // Country
  iban                      String?  // IBAN
  bic                       String?  // BIC
  nib                       String?  // NIB
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())
}